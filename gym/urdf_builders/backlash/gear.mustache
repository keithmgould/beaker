  <!-- {{dir}} Gear .................................................................-->
  <link name="{{dir}}_gear">
    <visual>
      <geometry>
        <cylinder length="{{gear_length}}" radius="{{gear_rad}}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <material name="{{color}}"/>
    </visual>
     <collision>
      <geometry>
        <cylinder length="{{gear_length}}" radius="{{gear_rad}}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="{{gear_mass}}" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  
  <joint name="body_to_{{dir}}_gear" type="continuous">
    <origin xyz="{{gear_x_offset}} 0 {{gear_z_offset}}" />
    <parent link="body"/>
    <child link="{{dir}}_gear"/>
    <axis xyz="1 0 0"/>
  </joint>