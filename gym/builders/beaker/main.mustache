<?xml version="1.0"?>
<robot name="beaker">

  <!-- colors ................................................................. -->
  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>

 <material name="green">
    <color rgba="0 0.8 0 0.75"/>
  </material>

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="orange">
    <color rgba="0.8 0.4 0 0.75"/>
  </material>

  <material name="pink">
    <color rgba="1 0.5 0.5 1"/>
  </material>
  
  <material name="gray">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>

  <!-- main body (base) .................................................................-->

  <link name="body">
    <visual>
      <geometry>
        <box size="{{body_dimensions}}"/>
      </geometry>
      <origin xyz="0 0 0.3302" />
      <material name="gray"/>
    </visual>

    <!-- axle -->
    <visual>
      <geometry>
        <cylinder length="0.17" radius=".01"/>
      </geometry>
      <origin rpy="0 1.5707963 0" xyz="0 0 0.01905"/>
      <material name="gray"/>
    </visual>

    <collision>
      <geometry>
        <box size="{{body_dimensions}}"/>
      </geometry>
      <origin xyz="0 0 0.3302" />
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.2159"/>
      <mass value="{{body_mass}}" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  {{> Face}}

  {{#right_side}}

  <!-- right Wheel .................................................................-->
  {{> Wheel}}

  <!-- right Wheel Indicator .................................................................-->
  {{> wheel_indicator}}

  {{/right_side}}
  {{#left_side}}

  <!-- leftWheel .................................................................-->
  {{> Wheel}}

  <!-- leftWheelIndicator .................................................................-->
  {{> wheel_indicator}}

  {{/left_side}}

</robot>