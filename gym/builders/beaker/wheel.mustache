  <link name="{{dir}}Wheel">
    <visual>
      <geometry>
        <cylinder length="{{wheel_length}}" radius="{{wheel_rad}}"/>
      </geometry>
      <origin rpy="0 1.5708 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="{{wheel_length}}" radius="{{wheel_rad}}"/>
      </geometry>
      <origin rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value=".1" />
      <inertia ixx="0.00004453" ixy="0.0" ixz="0.0" iyy="0.00004453" iyz="0.0" izz="0.00007938"/>
    </inertial>
  </link>

  <joint name="bodyToWheel" type="revolute">
    <limit lower="-0.0756" upper="0.0756" effort="1000" velocity="1000"/>
    <origin xyz="{{wheel_x_offset}} 0 0"/>
    <parent link="body"/>
    <child link="{{dir}}Wheel"/>
    <axis xyz="1 0 0"/>
  </joint>