<?xml version="1.0"?>
<robot name="beaker">
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="something">
    <color rgba="1 0.5 0.5 1"/>
  </material>
  
  <material name="black">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>

  <!-- Main Body -->
  <link name="body">
    <visual>
      <geometry>
        <box size="0.1016 0.0254 0.6604"/>
      </geometry>
      <origin xyz="0 0 0.3302" />
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.1016 0.0254 0.6604"/>
      </geometry>
      <origin xyz="0 0 0.3302" />
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.2159"/>
      <mass value="1.767" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- face link. for visual only. -->
  <link name="face">
    <visual>
      <geometry>
        <box size="0.05 0.01 0.05"/>
      </geometry>
      <origin xyz="0 0.010 0.5" />
      <material name="something"/>
    </visual>
  </link>
  <joint name="face_joint" type="fixed">
    <parent link="body"/>
    <child link="face"/>
  </joint>

  <!-- axle. for visual only. -->
  <link name="axle_link">
    <visual>
      <geometry>
        <cylinder length="0.17" radius=".01"/>
      </geometry>
      <origin rpy="0 1.57 0" xyz="0 0 0.01905"/>
      <material name="something"/>
    </visual>
  </link>
  <joint name="axle_joint" type="fixed">
    <parent link="body"/>
    <child link="axle_link"/>
    <axis xyz="1 0 0"/>
  </joint>


  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.0254" radius=".042"/>
      </geometry>
      <origin rpy="0 1.57 0"/>
      <material name="blue"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.0254" radius=".042"/>
      </geometry>
      <origin rpy="0 1.57 0"/>
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.2159"/>
      <mass value="0.09" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Left Wheel Joint To Body -->
  <joint name="base_to_left_wheel" type="continuous">
    <parent link="body"/>
    <child link="left_wheel"/>
    <origin xyz="0.09398 0.0 0.01905" />
    <axis xyz="1 0 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.0254" radius=".042"/>
      </geometry>
      <origin rpy="0 1.57 0" />
      <material name="blue"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.0254" radius=".042"/>
      </geometry>
      <origin rpy="0 1.57 0"/>
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.2159"/>
      <mass value="0.09" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Right Wheel Joint to Body -->
  <joint name="base_to_right_wheel" type="continuous">
    <parent link="body"/>
    <child link="right_wheel"/>
    <origin xyz="-0.09398 0.0 0.01905" />
    <axis xyz="1 0 0"/>
  </joint>
</robot>